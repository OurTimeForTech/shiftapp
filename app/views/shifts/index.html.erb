<p id="notice"><%= notice %></p>

<h1>Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Shift status</th>
      <th>Role name</th>
      <th>Shift start</th>
      <th>Shift end</th>
      <th>Shift pay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.shift_status %></td>
        <td><%= shift.role_name %></td>
        <td><%= shift.shift_start %></td>
        <td><%= shift.shift_end %></td>
        <td><%= shift.shift_pay %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

